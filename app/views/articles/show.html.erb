<h1 class="display-1 text-center text-success">
  <%= @article.title %>
</h1>

<div class="my-5 p-5">
  <p>
    <%= @article.body %>
  </p><br>

  <small>
    <span class="text-muted">Author: </span><%= link_to @article.author, nil, class: 'text-success' %><br>
    <span class="text-muted">
      Created: <span class="text-dark"><%= @article.created_at.strftime('%d-%m-%Y at %H:%m') %></span>
    </span>
  </small>
</div>

<h5 class="text-center">
  <%= link_to 'Back', articles_path, class: 'text-secondary border p-5 shadow-sm' %>
  <%= link_to 'Edit', edit_article_path(@article), class: 'text-warning border p-5 shadow-sm' %>
</h5>
<br>
<div class="text-center">
  <%=
    button_to 'Delete',
    article_path(@article),
    method: :delete,
    data: { turbo_method: :delete, turbo_confirm: 'Are your sure?' },
    class: 'btn btn-link m-0 p-0 text-decoration-none text-danger border p-5 shadow-sm my-3'
  %>
</div>
